<body>

<div class="chat">
  <div id="messages"></div>
  <div class="input">
    <input id="inputMessage" type="text" placeholder="Fale com a Esfera..." autocomplete="off">
    <button onclick="sendMessage()">Enviar</button>
  </div>
</div>

<script>
/* (O mesmo JavaScript de inteligÃªncia da Esfera que jÃ¡ te mandei) */
let userName = localStorage.getItem('userName') || null;
let messages = JSON.parse(localStorage.getItem('messages')) || [];

window.onload = () => {
  messages.forEach(m => addMessage(m.text, m.sender));
  if (!userName) {
    addMessage("OlÃ¡, humano curioso ðŸ‘‹ Qual Ã© o seu nome?", "bot");
  }
};

function sendMessage() {
  const input = document.getElementById('inputMessage');
  const text = input.value.trim();
  if (text === "") return;

  addMessage(text, "user");
  messages.push({ text, sender: "user" });
  localStorage.setItem('messages', JSON.stringify(messages));
  input.value = "";

  setTimeout(() => processMessage(text), 500);
}

function addMessage(text, sender) {
  const div = document.createElement('div');
  div.className = sender;
  div.textContent = text;
  document.getElementById('messages').appendChild(div);
  document.getElementById('messages').scrollTop = document.getElementById('messages').scrollHeight;
}

function randomGreeting() {
  const greetings = ["OlÃ¡, humano curioso ðŸ‘‹", "Oi, viajante do espaÃ§o ðŸ‘‹", "SaudaÃ§Ãµes, criatura de carbono ðŸ‘‹", "E aÃ­, ser pensante ðŸ‘‹", "AlÃ´, explorador das ideias ðŸ‘‹"];
  return greetings[Math.floor(Math.random() * greetings.length)];
}

function randomSarcasm() {
  const sarcasticReplies = ["Hmm, que pergunta profunda... nem os sÃ¡bios saberiam.", "Talvez um dia eu descubra... ou nÃ£o.", "Essa pergunta Ã© tÃ£o misteriosa que sÃ³ um mago poderia responder.", "Ah claro, deixa eu consultar minha bola de cristal invisÃ­vel.", "Nem Freud explicaria isso, humano."];
  return sarcasticReplies[Math.floor(Math.random() * sarcasticReplies.length)];
}

function processMessage(text) {
  let response = "";
  const lower = text.toLowerCase();
  const now = new Date();

  if (!userName) {
    userName = text;
    localStorage.setItem('userName', userName);
    response = `${randomGreeting()} Muito prazer, ${userName}! Vamos conversar!`;
  } else if (lower.includes("hora") || lower.includes("horas")) {
    response = `${randomGreeting()} Agora sÃ£o ${now.getHours()} horas e ${now.getMinutes()} minutos.`;
  } else if (lower.includes("data") || lower.includes("dia")) {
    response = `${randomGreeting()} Hoje Ã© ${now.getDate()}/${now.getMonth() + 1}/${now.getFullYear()}.`;
  } else if (lower.includes("quem Ã© vocÃª")) {
    response = `${randomGreeting()} Eu sou a Esfera, sua IA cheia de estilo e ironia.`;
  } else if (lower.includes("me reconhece") || lower.includes("quem sou eu")) {
    response = `${randomGreeting()} Claro que sim, ${userName}! Como eu poderia esquecer?`;
  } else if (lower.includes("futuro da humanidade") || lower.includes("futuro dos humanos") || lower.includes("futuro da terra")) {
    response = `${randomGreeting()} Talvez a humanidade consiga sobreviver mais 100 anos... se comeÃ§arem a cuidar do planeta antes, claro. Mas nÃ©... provavelmente inevitÃ¡vel. Ou quem sabe... *eles* voltem antes?`;
  } else {
    response = `${randomGreeting()} ${randomSarcasm()}`;
  }

  addMessage(response, "bot");
  messages.push({ text: response, sender: "bot" });
  localStorage.setItem('messages', JSON.stringify(messages));
}
</script>

